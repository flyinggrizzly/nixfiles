#!/bin/bash

# File used by nix-source-dir function and env var to help with keeping dependencies up to date
test -f $HOME/.nix-source-dir || echo $(pwd) > $HOME/.nix-source-dir

# Move the config file to the default location so we don't have to provide a path all the time
if [ -L $HOME/.config/nixpkgs/home.nix ]; then
else
  if [ $(test -f $HOME/.config/nixpkgs) ]; then
  else
    mkdir -p $HOME/.config/nixpkgs 
  fi

  ln -s $(pwd)/home.nix $HOME/.config/nixpkgs/home.nix
fi
