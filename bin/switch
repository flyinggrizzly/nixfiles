#!/bin/bash
set -e

# Show usage information
function show_usage {
  echo "Usage: switch [OPTIONS] [PROFILE]"
  echo
  echo "Options:"
  echo "  --brew        Run brew bundle after successful switch"
  echo "  --no-gc       Skip running nix garbage collection"
  echo "  --skip-todos  Allow switch even if TODO comments exist"
  echo "  --help        Show this help message"
  echo
  echo "If PROFILE is not specified, username@hostname will be used."
  exit 0
}

# Parse command line arguments
RUN_BREW=true
RUN_GC=true
SKIP_TODOS=false
PROFILE=""
TRACE=""
FAST=false

while [[ $# -gt 0 ]]; do
  case $1 in
    --help)
      show_usage
      ;;
    --no-brew)
      RUN_BREW=false
      shift
      ;;
    --no-gc)
      RUN_GC=false
      shift
      ;;
    -t|--show-trace)
      TRACE="--show-trace"
      shift
      ;;
    -f|--fast)
      FAST=true
      shift
      ;;
    --skip-todos)
      SKIP_TODOS=true
      shift
      ;;
    *)
      PROFILE="$1"
      shift
      ;;
  esac
done

if [ "$FAST" = true ]; then
  RUN_GC=false
  RUN_BREW=false
  SKIP_TODOS=true
fi

# Use default profile if none specified
if [ -z "$PROFILE" ]; then
  PROFILE="$(whoami)@$(hostname -s)"
fi

# Check for TODO comments
if [ "$SKIP_TODOS" = false ]; then
  TODO_FILES=$(grep -rl --exclude-dir=.git "TODO" . 2>/dev/null || true)
  if [ -n "$TODO_FILES" ]; then
    echo "Error: TODO comments found in the following files:"
    echo "$TODO_FILES"
    echo
    echo "Resolve the TODOs or use --skip-todos to proceed anyway."
    exit 1
  fi
fi

echo "Switching to profile: $PROFILE"

# Run home-manager with the selected profile
home-manager switch --flake ".#${PROFILE}" -b backup ${TRACE}

# Run brew bundle if requested
if [ "$RUN_BREW" = true ] && [ "$(uname)" = "Darwin" ] && [ -f "$HOME/.Brewfile" ]; then
  echo "Running brew bundle..."
  brew bundle
fi

# Run garbage collection if enabled
if [ "$RUN_GC" = true ]; then
  echo "Running nix garbage collection (keeping last 14 days)..."
  nix-collect-garbage --delete-older-than 14d
fi

echo "Switch completed!"
